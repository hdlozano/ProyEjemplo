<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_500"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">


        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:text="User"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img"

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="416dp"
        android:layout_height="46dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inicio"
            android:background="@drawable/btnmodifi"/>

        <Button
            android:id="@+id/Noticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Noticias"
            android:background="@drawable/btnmodifi"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salir"
            android:background="@drawable/btnmodifi"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="272dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/psycology"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/citas"
                android:scaleType="centerCrop" />
            <TextView
                android:text="PSICOLOGÍA"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <ImageButton
                android:id="@+id/cultura"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cultura1"
                android:scaleType="centerCrop" />
            <TextView
                android:text="CULTURA"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <ImageButton
                android:id="@+id/deportes"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/deportes"
                android:scaleType="centerCrop" />
            <TextView
                android:text="DEPORTES"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <ImageButton
                android:id="@+id/apoyo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/apoyo"
                android:scaleType="centerCrop" />
            <TextView
                android:text="APOYO ACADÉMICO"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <ImageButton
                android:id="@+id/intercambio"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/intercambio"
                android:scaleType="centerCrop" />
            <TextView
                android:text="INTERCAMBIO"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>